{% assign store_settings = shop.metafields.country_blocker.settings.value %}

<country-blocker 
  data-block-handle="country-blocker"
  {% for setting in store_settings %}
    {{ setting[0] }}
    data-{{ setting[0] | downcase }}="{{ setting[1] }}"
  {% endfor %}
  data-shop="{{ shop.domain }}"
>
</country-blocker>
<script defer src="{{ 'country-blocker.js' | asset_url }}"></script>
{% schema %}
{
  "name": "Country Blocker",
  "target": "head"
}
{% endschema %}
