// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// MongoDB datasource configuration
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Session {
  session_id    String    @id @default(auto()) @map("_id") @db.ObjectId
  id            String    @unique
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        String? // Changed from BigInt to String for MongoDB
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)

  @@map("sessions")
}

model CountryBlockerSettings {
  id                   String   @id @default(auto()) @map("_id") @db.ObjectId
  shop                 String   @unique
  blockingMode         String   @default("allow")
  countryList          String   @default("")
  blockPageTitle       String   @default("Access Restricted")
  blockPageDescription String   @default("This store is not available in your country.")
  textColor            String   @default("#ffffff")
  backgroundColor      String   @default("#ffffff")
  boxBackgroundColor   String   @default("#ff8901")
  logoUrl              String?
  blockedIpAddresses   String   @default("")
  appEmbedEnabled      Boolean  @default(false)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  @@map("country_blocker_settings")
}
